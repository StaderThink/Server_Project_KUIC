@inherits FieldBase<string>

<div class="field has-addons">
    <div class="control is-expanded">
        <input type="@(Hidden ? "password" : "text")" @attributes="AdditionalAttributes" class="input @ControlCssClass()" @bind="CurrentValue" />
    </div>

    <div class="control">
        <div class="button is-link is-outline" @onclick="ToggleHide">
            <ion-icon name="@(Hidden ? "eye-outline" : "eye-off-outline")"></ion-icon>
        </div>
    </div>
</div>

@code {
    private bool Hidden { get; set; } = true;

    void ToggleHide()
    {
        Hidden = !Hidden;
    }
} 