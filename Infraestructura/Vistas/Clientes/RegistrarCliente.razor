@inject HttpClient http
@inject NavigationManager navegador

@page "/cliente/registrar"
@layout BaseLayout

<h3>Registrar Cliente</h3>
<form @onsubmit="Enviar">
    <div class="field">
        <label for="nombre">Nombre</label>
        <input id="nombre" class="input" type="text" @bind="cliente.Nombre" />
    </div>
    <div class="field">
        <label for="encargado">Encargado</label>
        <input id="encargado" class="input" type="text" @bind="cliente.Encargado" />
    </div>
    <div class="field">
        <label for="rut">Rut</label>
        <input id="rut" class="input" type="text" @bind="cliente.Rut" />
    </div>
    <div class="field">
        <label for="correo">Correo</label>
        <input id="correo" class="input" type="text" @bind="cliente.Correo" />
    </div>
    <div class="field">
        <label for="direccion">Direccion</label>
        <input id="direccion" class="input" type="text" @bind="cliente.Direccion" />
    </div>
    <div class="field">
        <label for="telefono">Telefono</label>
        <input id="telefono" class="input" type="number" @bind="cliente.Telefono" />
    </div>
    <input type="checkbox" @bind="cliente.Activo" />
    <div class="field">
        <div class="control is-gruped">
            <button class="is-prime">Registrar</button>
            <a href="/cliente" class="button is-outline">Cancelar</a>
        </div>
    </div>

</form>

@code {
    Cliente cliente { get; set; } = new Cliente();

    async Task Enviar()
    {
        HttpResponseMessage respuesta = await http.PostAsJsonAsync("/api/cliente", cliente);

        if (respuesta.IsSuccessStatusCode)
        {
            navegador.NavigateTo("/cliente");
        }
    }
}
