<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData">
                <NotAuthorized>
                    <LayoutView Layout="@typeof(BaseLayout)">
                        <NoAutorizado />
                    </LayoutView>
                </NotAuthorized>

                <Authorizing>
                    <p>Estamos validando tu sesión, por favor espera un momento.</p>
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(BaseLayout)">
                <Error />
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>